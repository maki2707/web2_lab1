<!doctype html>
<html lang="en">
  <%- include(`partials/head`); %>  
  <body>
    <%- include(`partials/navbar`); %> 
    <div class="myrow">
      <div class="mycolumn">
        <div class="fixtures-header" >
          <a class="button-59" href="/fixtures/<%= idk-100%>" role="button">prethodno</a>
          <div class="fixture-title"><h1 style="font-weight: bolder;"><%= idk>1000 ? String(idk).slice(0, 2) :String(idk).slice(0, 1) ; %>.kolo</h1></div>
          <a class="button-59" href="/fixtures/<%= idk+100 %>" role="button"> sljedeće</a>      
        </div>
       
          <% let kolo = idk %>              
                <% for(var utakmica of raspored) { %>                  
                    <% if(utakmica.utakoloid === kolo) { %>
                      <div class="fixtures-header">
                      <div class="fixture">                      
                        <div class="fixture-row">
                          <div class="fixture-team" id="<%= utakmica.idutakmica %>"><%= utakmica.nazivtima %></div>
                          <div class="fixture-result1"><%= utakmica.goltima %></div>
                        </div>
                        <div class="fixture-row">
                          <div class="fixture-team"><%= utakmica.nazivtimb %></div>
                          <div class="fixture-result2"><%= utakmica.goltimb %></div>    
                          
                        </div>                      
                      </div>   
                      <% if (user !== null) { %> 
                        <% if(user.email === "admin_web2_lab1@admin.com") { %>    
                          <div style="display: flex; flex-direction: column">
                            <a class="button-59 button-comment" style="text-decoration: none;margin: auto 0 auto 0;" href="/fixtures/admin/<%= utakmica.idutakmica  %>" id="edit-btn" value="<%= utakmica.idutakmica %>"><i class="bi bi-pencil-square" style="margin-right: 0.1em;"></i>
                              Uredi
                            </a>   
                            <a class="button-59 button-comment btn-danger" style="text-decoration: none;margin: auto 0 auto 0; border-radius: 8px; width: fit-content; margin-left: 0.5rem; margin-bottom: 0.25rem;" href="/fixtures/admin/cancel/<%= utakmica.idutakmica  %>/<%= kolo  %>" id="edit-btn" value="<%= utakmica.idutakmica %>"><i class="bi bi-trash" style="margin-right: 0.1em;"></i>
                              Obriši
                            </a>   
                          </div>         
                                                
                          <% } %>
                        <% } %>
                      </div>
                      
                      <% } %>
                <% } %>                   
        </div>
        <% if (user !== null) { %>
        <div class="mycolumn">
          <div style="display: flex;border-bottom: 2px solid black; margin-right: 3.2em; justify-content: space-between; margin-bottom: 0.5em;">
            <h3 style="font-weight: bolder; color:black; ">Komentari:</h3>            
            <button type="button" class="button-59 button-comment" style="height: 2.5em;" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="bi bi-chat-left-dots-fill" style="margin-right: 0.2em;"></i>Dodaj</button>
             
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Dodaj komentar za <%= idk>1000 ? String(idk).slice(0, 2) :String(idk).slice(0, 1) ; %>.kolo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form action="/fixtures/<%= utakmica.utakoloid%>" method="POST">
                  <textarea  id="komtekst" name="komtekst" style="width: 80%;" rows="5"></textarea>
                
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Odustani</button>
                <button type="submit"  class="btn btn-primary">Komentiraj</button>
              </form>
              </div>
            </div>
          </div>
        </div>


          </div>          
          <% if(komentari.length >0) { %>
            <% for(var kom of komentari) { %>
 

              <div class="comment-box">
                <div style="display: flex; justify-content: space-between">
                  <div class="comment-username"><%= kom.name %></div>
                  <div class="comment-username"><%= kom.datumkom.toLocaleDateString() %> | <%= kom.vrijemekom %></div>
                </div>  
                <div style="display: flex; justify-content: space-between">
                  <div class="comment-text">
                    <i class="bi bi-chat-right-dots-fill" style="margin-right: 0.25em;"></i><%= kom.sadrzajkom %>
                  </div>
                  <% if (user !== null) { %>
                    <% if (user.sub === kom.korisnikid) { %>
                      <div class="comment-buttons">
                        <a class="button-59 button-comment" style="height: 1.5em;" href="/fixtures/comment/edit/<%= kom.idkomentar %>"><i class="bi bi-pencil-square" style="margin-right: 0.1em;"></i>Uredi</a>
                        <a class="button-59 button-comment btn-danger" href="/fixtures/delete/<%= idk %>/<%= kom.idkomentar %>" style="height: 1.5em;"><i class="bi bi-trash" style="margin-right: 0.1em;"></i>Obriši</a>
                      </div>
                      <% } else if(user.email === "admin_web2_lab1@admin.com") { %>
                        <a class="button-59 button-comment btn-danger" href="/fixtures/admin/delete/<%= idk %>/<%= kom.idkomentar %>" style="height: 1.5em;"><i class="bi bi-sign-stop-fill"></i><i class="bi bi-trash" style="margin-right: 0.1em;"></i>Obriši</a>
                    <% } %>
                  <% } %>
                </div>         
              </div>
            <% } %>
          <% } else { %>  
            <h5 style="font-weight: bolder; color:black; ">Nema komentara za prikaz...</h5>
            <% } %>  
        </div>  
        <% } else { %>  
          <div class="mycolumn">
            <div style="display: flex;border-bottom: 2px solid black; margin-right: 3.2em; justify-content: space-between; margin-bottom: 0.5em;">
              <h3 style="font-weight: bolder; color:black; ">...Prijavite se za prikaz komentara...</h3>            
          </div>   
          <% } %>      
        </div>
      

      
      
      
              
    
    
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>